#!/bin/sh
CMAKE_BINARY_DIR=@CMAKE_BINARY_DIR@
MAKE_COMMAND=@CMAKE_BUILD_TOOL@

$MAKE_COMMAND $CMAKE_BINARY_DIR local_install

QUAFE_BINARY=$CMAKE_BINARY_DIR/data/quafe-etk
QUAFE_CONFIG_DIR=$CMAKE_BINARY_DIR/data
QUAFE_EAPI_DIR=$QUAFE_CONFIG_DIR
QUAFE_PLUGIN_DIR=$QUAFE_CONFIG_DIR/plugins
QUAFE_DATA_DIR=$QUAFE_CONFIG_DIR

$QUAFE_BINARY --config-directory=$QUAFE_CONFIG_DIR --eapi-directory=$QUAFE_EAPI_DIR --plugin-directory=$QUAFE_PLUGIN_DIR --data-directory=$QUAFE_DATA_DIR
